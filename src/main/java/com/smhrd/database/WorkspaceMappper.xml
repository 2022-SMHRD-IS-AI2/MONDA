<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.smhrd.model.WorkspaceVO">
	<!-- 워크스페이스 추가 -->
	<insert id="upload" parameterType="com.smhrd.model.WorkspaceVO">
		insert into T_WORKSPACE values (
		work_num, #{work_name}, #{work_status}, #{work_s}, #{work_e}, #{work_requester}, #{work_wrt} #{project_name})
	</insert>
	
	<!-- 워크스페이스 조회 -->
	<select id="showWorkspace" resultType="com.smhrd.model.WorkspaceVO" >
		select * from T_WORKSPACE where WORK_WRT=#{work_wrt};
	</select>
	
</mapper>